<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="product_questions"
           resource="default"
           engine="innodb">
        <column xsi:type="int"
                name="id"
                nullable="false"
                identity="true"
                comment="Question ID"/>
        <constraint xsi:type="primary"
                    referenceId="PRIMARY">
            <column name="id" />
        </constraint>
        <column xsi:type="text"
                name="product"
                nullable="false"
                comment="Product"/>
        <column xsi:type="text"
                name="question"
                nullable="false"
                comment="Question"/>
        <column xsi:type="text"
                name="answer"
                nullable="false"
                comment="Answer"/>
        <column xsi:type="smallint"
                name="status"
                nullable="false"
                default="0"
                comment="Status"/>
        <column xsi:type="int"
                name="position"
                nullable="false"
                default="0"
                comment="Position"/>
        <column xsi:type="timestamp"
                name="updated_at"
                on_update="true"
                default="CURRENT_TIMESTAMP"
                comment="Updated At"/>
        <index referenceId="QUESTIONS_QUESTION" indexType="fulltext">
            <column name="question"/>
        </index>
    </table>
</schema>
